set -e

if [ \( "$1" = "upgrade" -o "$1" = "remove" \) -a -L /usr/doc/parted ]; then

  # Use invoke-rc.d in dpkg maintainer script rather than calling directly
  systemctl stop kiosk || true
  systemctl stop chromium-remote-debug || true
  systemctl stop 2immerse-firmware || true
  systemctl stop dnsmasq-ap || true
  invoke-rc.d app2app-dial-server stop || true
  invoke-rc.d dvbcsstv-proxy stop || true

  pip uninstall pydvbcss -y 

  if [ -d /etc/nginx/sites-enabled -a -e /etc/nginx/sites-enabled/captive-portal.conf ]; then
    # This only removes the symbolic link
    rm -f /etc/nginx/sites-enabled/captive-portal.conf
  fi

  if [ -d /etc/nginx/sites-enabled -a ! -e /etc/nginx/sites-enabled/default -a -e /etc/nginx/sites-available/default ]; then
    # Restore default configuration
    ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default
  fi
  
  nginx -s reload || true

  # Revoke trust flags for self-signed certificate
  #certutil -d sql:$HOME/.pki/nssdb -D -n 2immerseCA

  # TODO: More clean-up is required to remove autogenerated hostapd.conf and /etc/dnsmasq.conf etc.
  #       See the configure-networking and config-ap scripts in /usr/bin
fi

