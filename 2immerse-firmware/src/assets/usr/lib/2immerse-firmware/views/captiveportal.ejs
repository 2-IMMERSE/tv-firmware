<html lang="en">

<head>
    <title>2Immerse Wifi Configuration</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0 maximum-scale=1.0, user-scalable=1">
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <link rel="stylesheet" href="css/captiveportal.min.css">

</head>

<body>
    
    <nav class="navbar">
        <a class="navbar-brand" href="#">
            <img src="images/2immerse-logo-colour-small.svg" alt="2immerse logo">
        </a>
        <hr/>
    </nav>
    
    <div class="container">
        <!-- <h4 class="text-center">Pair TV with your Wi-Fi</h4> -->
        <h4 class="heading-2immerse" id="title-text">Scanning for Wi-Fi Networks...</h4>
        <ul id="accessPointGroup" class="list-group safari-list-group">
            <li class="list-group-item safari-list-group-item list-group-item-action d-flex flex-nowrap justify-content-center"> 
                <img src="images/load.svg">
            </li>
        </ul>
    </div>

    <div id="passwordModal" class="modal fade" role="dialog" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header safari-modal-header">
                    <h5 class="modal-title">Enter Wi-Fi Password</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <form action"/" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="passwordInput">Enter password for '<span id="ssidId"></span>'</label>
                            <input type="password" class="form-control" id="passwordInput" name="wifi_passcode" autofocus autocaptialize="none">
                            <input type="hidden" id="wifi_ssid" name="wifi_ssid">
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input id="showPasswordChk" type="checkbox" class="form-check-input">
                                Show password
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <input id="passwordOkayBtn" type="submit" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="js/captiveportal.min.js"></script>

</body>
</html>


